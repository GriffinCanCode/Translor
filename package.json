{
  "name": "translor",
  "version": "0.1.0",
  "description": "Real-time conversational translation and language instruction app.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev:electron": "electron .",
    "dev:react": "webpack serve --mode development --env development",
    "build:react": "webpack --mode production",
    "dev": "concurrently \"npm:dev:react\" \"npm:dev:electron\"",
    "postinstall": "electron-builder install-app-deps",
    "package": "npm run build:react && electron-builder --dir",
    "dist": "npm run build:react && electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "translation",
    "language learning"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.5.14",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.4",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "build": {
    "appId": "com.translor.app",
    "productName": "Translor",
    "files": [
      "dist/",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 