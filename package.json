{
  "name": "translor",
  "version": "0.1.0",
  "description": "A language learning app with real-time conversational translation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run start-react\" \"wait-on http://localhost:3000 && electron .\"",
    "start-react": "webpack serve --config webpack.config.js --mode development",
    "build": "webpack --config webpack.config.js --mode production && electron-builder",
    "build:win": "webpack --config webpack.config.js --mode production && electron-builder --win",
    "build:mac": "webpack --config webpack.config.js --mode production && electron-builder --mac",
    "build:linux": "webpack --config webpack.config.js --mode production && electron-builder --linux",
    "package": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.translor.app",
    "productName": "Translor",
    "files": [
      "dist/",
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "src/lessons",
        "to": "lessons",
        "filter": ["**/*.json"]
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.education",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Education"
    }
  },
  "dependencies": {
    "axios": "^1.3.4",
    "electron-store": "^8.1.0",
    "firebase": "^9.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.1.0",
    "style-loader": "^3.3.2",
    "tailwindcss": "^3.2.7",
    "terser-webpack-plugin": "^5.3.7",
    "wait-on": "^7.0.1",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.1"
  },
  "author": "",
  "license": "MIT"
} 